{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"outDir": "build",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2015",
		"declaration": true,
		"skipLibCheck": true,
		"paths": {
			"~/tests": ["tests/chai.ts"]
		},
		"lib": ["es2021"]
	},
	"include": [
		"lib/**/*.ts",
		"tests/**/*.ts"
	]
}
